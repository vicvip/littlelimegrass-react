{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // Indent with 4 spaces
        // "indent": ["error", 4],

        // // Indent JSX with 4 spaces
        // "react/jsx-indent": ["error", 4],
    
        // // Indent props with 4 spaces
        // "react/jsx-indent-props": ["error", 4],
    }
}